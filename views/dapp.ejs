<!DOCTYPE html>
<html>
<head>
  <link rel="stylesheet" href="/assets/css/base.css">
  <link rel="stylesheet" href="/assets/css/dapp.css">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=M+PLUS+Rounded+1c:wght@100;300;400;500;700;800;900&display=swap" rel="stylesheet">
</head>
<body>
  <div id="navbar">
    <a href="/" class="navitem">Home</a>
  </div>
  <div id="showoff">
    <div id="sidebar">
      <button type="button" class="collapsible">Collections</button>
      <div class="dropdownContent" id="collectionsDropdown">
        <p>Here's the dropdown shit!</p>
      </div>
    </div>
    <div id="borrowableGrid">
      <% for (var i = 0; i < liveNFTs.length; i++) {%>
        <div class="nftElement" data-address="<%= liveNFTs[i].addy %>" data-tokenId="<%= liveNFTs[i].tokenId %>">
          <div class="grid-item">
            <img class="nftImage" src="<%= imageURIs[i] %>">
          </div>
          <div class="nftDescriptionContainer">
            <div class="nftPriceContainer">
              <img class="nftPriceETHLogo" src="/assets/photos/ethlogo.svg" alt="Ethereum Logo"/><h4 class="priceLabel"><%= liveNFTs[i].valuation * 10**-18 %></h4><h3 class="collateralLabel">@ <%= liveNFTs[i].collateralMultiplier %>x</h3><h4 class="nftTokenId">#<%= liveNFTs[i].tokenId %></h4>
            </div>
            <div class="nftCollectionContainer">
              <h4 class="nftCollectionName"><%= liveNFTs[i].addy %></h4>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>
  <script src="/assets/js/dapp.js"></script>

</body>
</html>
